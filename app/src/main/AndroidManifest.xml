<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moodytoons">
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/kys"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AngryActivity"
            android:label="@string/title_activity_angry"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".SadActivity"
            android:label="@string/title_activity_sad"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SleepyActivity"
            android:label="@string/title_activity_sleepy"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HappyActivity"
            android:label="@string/title_activity_happy"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>